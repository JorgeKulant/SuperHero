<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageHeroAct"
            android:layout_width="match_parent"
            android:layout_height="277dp"
            android:contentDescription="@string/todo"
            tools:ignore="ImageContrastCheck"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/heroNameAct"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:text="@string/spiderman"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/realNameAct"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:text="@string/peter_parker"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/publisherAct"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/marvel"
            android:textAlignment="center"
            android:textColor="#757575"
            android:textSize="16sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/infoAct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:paddingStart="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/textview"
                    android:textAlignment="textStart"
                    android:textSize="14sp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>